<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My To Do List</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Today</a></li>
        <li><a href="/work">Work</a></li>
      </ul>
    </nav>
    <div class="container">
      <div class="wrapper">
        <h1>Work List</h1>

        <% if (locals.addTodo) { %> <% for (var i = 0; i < addTodo.length; i++) { %>
        <form action="/deletework" method="POST">
          <div class="list-container">
            <input type="checkbox" id="list-<%= i %>" name="checkbox" value="<%= addTodo[i]._id %>" onChange="this.form.submit()" />
            <label for="list-<%- i %>"><%= addTodo[i].name %></label>
          </div>
        </form>
        <% }}; %>

        <form class="submit" action="/work" method="POST">
          <input type="text" placeholder="New To Do" name="new" />
          <input type="submit" value="+" />
        </form>
      </div>
    </div>
  </body>
</html>
